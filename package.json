{
  "name": "adonis-bullmq",
  "version": "0.0.7",
  "description": "Queue system based on BullMQ for AdonisJS",
  "homepage": "https://github.com/seekcx/adonis-bullmq",
  "license": "MIT",
  "keywords": [
    "adonisjs",
    "bullmq",
    "queue"
  ],
  "authors": [
    { "name": "Romain Lanz", "email": "romain.lanz@setten.io" },
    { "name": "Abel", "email": "abel@seek.cx" }
  ],
  "main": "build/providers/QueueProvider.js",
  "files": [
    "build/adonis-typings",
    "build/commands",
    "build/providers",
    "build/src",
    "build/templates",
    "build/instructions.js",
    "build/instructions.md"
  ],
  "typings": "./build/adonis-typings/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build-only && npm run copyfiles",
    "build-only": "tsc",
    "clean": "del-cli build",
    "copyfiles": "copyfiles \"templates/**/*.txt\" \"instructions.md\" build",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "bullmq": ">= 3"
  },
  "devDependencies": {
    "@adonisjs/application": "^5.3.0",
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/sink": "^5.4.2",
    "copyfiles": "^2.4.1",
    "del-cli": "^4.0.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4"
  },
  "publishConfig": {
    "tag": "latest",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seekcx/adonis-bullmq.git"
  },
  "bugs": {
    "url": "https://github.com/seekcx/adonis-bullmq/issues"
  },
  "adonisjs": {
    "instructions": "./build/instructions.js",
    "instructionsMd": "./build/instructions.md",
    "types": "adonis-bullmq",
    "providers": [
      "adonis-bullmq"
    ],
    "commands": [
      "adonis-bullmq/build/commands"
    ],
    "templates": {
      "basePath": "./build/templates",
      "contracts": [
        {
          "src": "contract.txt",
          "dest": "queue"
        }
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptPackage",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 100,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "useTabs": true
  }
}